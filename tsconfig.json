{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Reglas adicionales para hacer TypeScript m치s restrictivo */
        "noImplicitReturns": true, // Error si una funci칩n no tiene una declaraci칩n de retorno
        "noImplicitAny": true, // Error si TypeScript no puede inferir el tipo 'any'
        "strictNullChecks": true, // Habilita comprobaciones estrictas de valores nulos
        "strictPropertyInitialization": true, // Error si las propiedades de clase no est치n inicializadas en el constructor
        "noImplicitThis": true, // Error si 'this' se usa antes de ser asignado
        "alwaysStrict": true // Aplica el modo estricto de JavaScript en todos los archivos
    },
    "exclude": [".eslintrc.cjs"],
    "include": ["src", "public"],
    "files": [
        "src/assets/LoL_Logo_Icon_Package/LoL_Icon_Flat_Gold/LoL_Icon_Flat_GOLD.tsx"
